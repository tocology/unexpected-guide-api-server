{
  "name": "docent_api_server",
  "version": "1.0.0",
  "description": "API Server for Docent App",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint config server test",
    "lint:fix": "npm run lint --fix",
    "build": "npm run lint && webpack --node",
    "serve": "./node_modules/.bin/cross-env NODE_ENV=production ./node_modules/.bin/forever start -l forever.log -a build/server.js",
    "watch:build": "webpack --watch",
    "watch:server": "sleep 5; ./node_modules/.bin/cross-env NODE_ENV=development ./node_modules/.bin/nodemon",
    "start": "./node_modules/.bin/npm-run-all --parallel watch:build watch:server",
    "test": "./node_modules/.bin/cross-env NODE_ENV=test mocha test/**/*.js --compilers js:babel-core/babel-register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://tocology@bitbucket.org/tocology/docent-api-server.git"
  },
  "keywords": [
    "docent"
  ],
  "author": "tocology",
  "homepage": "https://bitbucket.org/tocology/docent-api-server#readme",
  "dependencies": {
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.1",
    "cross-env": "^3.1.3",
    "debug": "^2.5.1",
    "express": "^4.14.0",
    "express-jwt": "^5.1.0",
    "express-validation": "^1.0.1",
    "express-winston": "^2.1.2",
    "forever": "^0.15.3",
    "helmet": "^3.2.0",
    "http-status": "^0.2.3",
    "joi": "^10.1.0",
    "jsonwebtoken": "^7.2.1",
    "method-override": "^2.3.7",
    "morgan": "^1.7.0",
    "mysql": "^2.13.0",
    "mysql2": "^1.1.2",
    "sequelize": "^3.29.0",
    "sequelize-cli": "^2.5.1",
    "winston": "^2.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "chai": "^3.5.0",
    "eslint": "^3.12.2",
    "json-loader": "^0.5.4",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^3.1.2",
    "typescript": "^2.1.4",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  }
}
